FROM nvidia/cuda:13.0.0-devel-ubuntu24.04

# System deps: ffmpeg with NVENC, p7zip for ISO extraction, libdvd-pkg for DVD copy protection
RUN apt-get update \
    && apt-get install -y --no-install-recommends \
       wget \
       xz-utils \
       ca-certificates \
       tzdata \
    && wget -O - https://github.com/yt-dlp/FFmpeg-Builds/releases/download/latest/ffmpeg-master-latest-linux64-gpl.tar.xz | tar -xJ --strip-components=1 -C /usr/local \
    && ln -s /usr/local/bin/ffmpeg /usr/bin/ffmpeg \
    && ln -s /usr/local/bin/ffprobe /usr/bin/ffprobe \
    && apt-get install -y --no-install-recommends \
       p7zip-full \
       libdvd-pkg \
    && dpkg-reconfigure libdvd-pkg \
    && apt-get dist-clean

# Install Python 3.12 and NVIDIA container toolkit
RUN apt-get update \
    && apt-get install -y --no-install-recommends \
       python3 \
       python3-dev \
       python3-pip \
       curl \
    && curl -fsSL https://nvidia.github.io/libnvidia-container/gpgkey | gpg --dearmor -o /usr/share/keyrings/nvidia-container-toolkit-keyring.gpg \
    && curl -s -L https://nvidia.github.io/libnvidia-container/stable/deb/nvidia-container-toolkit.list | \
       sed 's#deb https://#deb [signed-by=/usr/share/keyrings/nvidia-container-toolkit-keyring.gpg] https://#g' | \
       tee /etc/apt/sources.list.d/nvidia-container-toolkit.list \
    && apt-get update \
    && apt-get install -y --no-install-recommends \
       libnvidia-container1 \
       libnvidia-encode-575 \
    && ln -s /usr/bin/python3 /usr/bin/python \
    && apt-get dist-clean

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1

WORKDIR /app

COPY requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir --break-system-packages -r /app/requirements.txt

# Create directories for data volumes
RUN mkdir -p /data/incoming /data/work /data/output

COPY src/ /app/src/

ENTRYPOINT ["python", "-m", "src.app.main"]
